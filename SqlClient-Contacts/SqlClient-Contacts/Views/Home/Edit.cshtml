@model SqlClient_Contacts.Models.Contact
@{
    ViewBag.Title = "Create";
}

<h2>Edit Contact: @Model.Name</h2>

@if (ViewBag.Error != null)
{
    <div class="warning">@ViewBag.Error</div>
}

<form action="@Url.Action("Edit", "Home", new { id = Model.ContactId })" method="post">
    <input type="hidden" name="ContactId" id="ContactId" value="@Model.ContactId"/>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required placeholder="Enter Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="Email">Email address</label>
        <input type="email" class="form-control" id="Email" name="Email" required placeholder="Enter Email" value="@Model.Email">
    </div>
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required placeholder="Enter Title" value="@Model.Title">
    </div>


    <button type="submit" class="btn btn-default">Save Changes</button>
</form>

